page {
    background-color: #fff;
    height: 100%;
    min-height: 100%;
}

button:after {
    border: none;
}

.qrcode {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    min-height: 100%;
}

.qrcode-main {
    border-radius: 24rpx;
    box-shadow: 0 4rpx 24rpx rgba(0,0,0,.15);
    height: 640rpx;
    margin: 0 auto;
    position: relative;
    width: 480rpx;
}

.qrcode-bd {
    padding: 64rpx 32rpx 32rpx;
}

.qrcode-bd__bgi {
    border-radius: 24rpx;
    height: 640rpx;
    position: relative;
    width: 480rpx;
    z-index: 1;
}

.qrcode-bd__main {
    bottom: 0;
    left: 0;
    padding: 136rpx 59rpx 30rpx;
    position: absolute;
    right: 0;
    text-align: center;
    top: 0;
    z-index: 2;
}

.qrcode-bd__code {
    height: 280rpx;
    margin: 0 auto;
    position: relative;
    width: 280rpx;
    z-index: 3;
}

.qrcode-bd__photo {
    border: 1rpx solid #fff;
    border-radius: 4rpx;
    height: 60rpx;
    left: 50%;
    position: absolute;
    top: 240rpx;
    transform: translate(-50%);
    width: 60rpx;
    z-index: 4;
}

.qrcode-bd__name {
    color: hsla(0,0%,100%,.9);
    font-size: 28rpx;
    font-weight: 700;
    line-height: 1;
    margin-top: 22rpx;
    text-align: center;
}

.qrcode-ft {
    padding: 64rpx 0;
    position: relative;
}

.qrcode-ft:after {
    border-top: 1rpx solid rgba(0,0,0,.1);
    content: " ";
    height: 1rpx;
    left: 64rpx;
    position: absolute;
    right: 64rpx;
    top: 64rpx;
    z-index: 2;
}

.qrcode-ft__cell {
    -webkit-box-align: center;
    align-items: center;
    background-color: #fff;
    border-radius: 0;
    color: rgba(0,0,0,.9);
    cursor: pointer;
    display: flex;
    font-size: 32rpx;
    line-height: 44rpx;
    overflow: hidden;
    padding: 32rpx 64rpx;
    position: relative;
    text-align: left;
    text-decoration: none;
}

.qrcode-ft__cell:before {
    border-bottom: 1rpx solid rgba(0,0,0,.1);
    bottom: 0;
    content: " ";
    height: 1rpx;
    left: 64rpx;
    position: absolute;
    right: 64rpx;
    z-index: 2;
}

.qrcode-ft__cell_hover {
    background-image: linear-gradient(-180deg,rgba(0,0,0,.1),rgba(0,0,0,.1));
}

.qrcode-ft__icon {
    height: 48rpx;
    margin-right: 32rpx;
    width: 48rpx;
}

.qrcode-ft__text {
    -webkit-box-flex: 1;
    color: rgba(0,0,0,.9);
    flex: 1;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 44rpx;
}

